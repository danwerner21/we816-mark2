00F262  2  8F 00 FE 00          STA     F:UART0         ; save baud rate
00F266  2  A9 00                LDA     #00             ;
00F268  2  8F 01 FE 00          STA     F:UART1         ;
00F26C  2  A9 03                LDA     #03             ;
00F26E  2  8F 03 FE 00          STA     F:UART3         ; SET 8 BIT DATA, 1 STOPBIT
