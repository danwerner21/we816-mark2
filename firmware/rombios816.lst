00D257  2               ;	1200:	96	 = 1,843,200 / ( 16 X 1200 )
00D257  2               ;	2400:	48	 = 1,843,200 / ( 16 X 2400 )
00D257  2               ;	4800:	24	 = 1,843,200 / ( 16 X 4800 )
00D257  2               ;	9600:	12	 = 1,843,200 / ( 16 X 9600 )
00D257  2               ;	19K2:	06	 = 1,843,200 / ( 16 X 19,200 )
00D257  2               ;	38K4:	03
00D257  2               ;	57K6:	02
00D257  2               ;	115K2:	01
00D257  2               ;
